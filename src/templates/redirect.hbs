			<g filter="url(#filter0_dd_10337_14)">
				<circle cx="188" cy="181" r="32" fill="#F1F2F4"></circle>
				<path fill-rule="evenodd" clip-rule="evenodd"
					d="M190.667 178.333V167.667C190.667 166.959 190.386 166.281 189.886 165.781C189.386 165.281 188.707 165 188 165C187.293 165 186.615 165.281 186.115 165.781C185.615 166.281 185.334 166.959 185.334 167.667V178.333H174.667C173.96 178.333 173.281 178.614 172.781 179.114C172.281 179.614 172 180.293 172 181C172 181.707 172.281 182.385 172.781 182.886C173.281 183.386 173.96 183.667 174.667 183.667H185.334V194.333C185.334 195.041 185.615 195.719 186.115 196.219C186.615 196.719 187.293 197 188 197C188.707 197 189.386 196.719 189.886 196.219C190.386 195.719 190.667 195.041 190.667 194.333V183.667H201.334C202.041 183.667 202.719 183.386 203.219 182.886C203.719 182.385 204 181.707 204 181C204 180.293 203.719 179.614 203.219 179.114C202.719 178.614 202.041 178.333 201.334 178.333H190.667Z"
